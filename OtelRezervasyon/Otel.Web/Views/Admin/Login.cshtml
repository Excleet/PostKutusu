@model Otel.Entity.DTOs.AdminLoginDto
@{
    Layout = null;
    ViewData["Title"] = "Admin Giriş";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Valeria Antique Hotel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            width: 350px;                  /* Genişliği kontrol et */
            margin: 100px auto;            
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-header h1 {
            color: #333;
            margin-bottom: 10px;
        }

        .login-header p {
            color: #666;
            font-size: 14px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus {
            outline: none;
            border-color: #667eea;
        }

        .checkbox-group {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .checkbox-group input {
            margin-right: 10px;
        }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: #667eea;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s ease;
            margin-bottom: 20px;
        }

        .btn-login:hover {
            background: #5a6fd8;
        }

        .alert {
            padding: 12px;
            border-radius: 5px;
            margin-bottom: 20px;
            text-align: center;
        }

        .alert-error {
            background: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

        .back-to-site {
            text-align: center;
            margin-top: 0;
            padding-top: 10px;
            border-top: 1px solid #eee;
        }

        .back-to-site a {
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
        }

        .back-to-site a:hover {
            text-decoration: underline;
        }

        .text-danger {
            color: #dc3545;
            font-size: 14px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h1><i class="fas fa-user-shield"></i> Admin Girişi</h1>
            <p>Valeria Antique Hotel Yönetim Paneli</p>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">
                @TempData["Error"]
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="KullaniciAdi">
                    <i class="fas fa-user"></i> Kullanıcı Adı
                </label>
                <input asp-for="KullaniciAdi" name="KullaniciAdi" type="text" placeholder="Kullanıcı adınızı girin" required>
                <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sifre">
                    <i class="fas fa-lock"></i> Şifre
                </label>
                <input asp-for="Sifre" name="Sifre" type="password" placeholder="Şifrenizi girin" required>
                <span asp-validation-for="Sifre" class="text-danger"></span>
            </div>

            <div class="checkbox-group">
                <input asp-for="BeniHatirla" name="BeniHatirla" type="checkbox">
                <label asp-for="BeniHatirla">Beni Hatırla</label>
            </div>

            <button type="submit" class="btn-login">
                <i class="fas fa-sign-in-alt"></i> Giriş Yap
            </button>
            
            <div class="back-to-site">
                <a href="@Url.Action("Index", "Home")">
                    <i class="fas fa-arrow-left"></i> Ana Siteye Dön
                </a>
            </div>
        </form>
    </div>
</body>
</html>