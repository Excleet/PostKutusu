@model IEnumerable<Otel.Entity.DTOs.RezervasyonDto>
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="dashboard-header">
    <h1>Dashboard</h1>
    <p>Hoş geldiniz, @User.FindFirst("FullName")?.Value</p>
</div>

<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-calendar-check"></i>
        </div>
        <div class="stat-info">
            <h3>@ViewBag.ToplamRezervasyonSayisi</h3>
            <p>Toplam Rezervasyon</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-clock"></i>
        </div>
        <div class="stat-info">
            <h3>@ViewBag.OnaysizRezervasyonSayisi</h3>
            <p>Onay Bekleyen</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-sign-in-alt"></i>
        </div>
        <div class="stat-info">
            <h3>@ViewBag.BugunGirisler</h3>
            <p>Bugün Giriş</p>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon">
            <i class="fas fa-sign-out-alt"></i>
        </div>
        <div class="stat-info">
            <h3>@ViewBag.BugunCikislar</h3>
            <p>Bugün Çıkış</p>
        </div>
    </div>
</div>

<div class="recent-reservations">
    <div class="section-header">
        <h2>Son Rezervasyonlar</h2>
        <a href="@Url.Action("Rezervasyonlar")" class="btn btn-primary">Tümünü Görüntüle</a>
    </div>

    <div class="table-responsive">
        <table class="data-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad Soyad</th>
                    <th>Email</th>
                    <th>Giriş Tarihi</th>
                    <th>Çıkış Tarihi</th>
                    <th>Oda Tipi</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rezervasyon in Model)
                {
                    <tr>
                        <td>@rezervasyon.Id</td>
                        <td>@rezervasyon.AdSoyad</td>
                        <td>@rezervasyon.Email</td>
                        <td>@rezervasyon.GirisTarihi.ToString("dd.MM.yyyy")</td>
                        <td>@rezervasyon.CikisTarihi.ToString("dd.MM.yyyy")</td>
                        <td>@rezervasyon.OdaTipi</td>
                        <td>
                            @if (rezervasyon.OnayDurumu)
                            {
                                <span class="status status-approved">Onaylı</span>
                            }
                            else
                            {
                                <span class="status status-pending">Beklemede</span>
                            }
                        </td>
                        <td>
                            <div class="action-buttons">
                                <a href="@Url.Action("RezervasyonDetay", new { id = rezervasyon.Id })" 
                                   class="btn btn-sm btn-info" title="Detay">
                                    <i class="fas fa-eye"></i>
                                </a>
                                @if (!rezervasyon.OnayDurumu)
                                {
                                    <form asp-controller="Admin" asp-action="OnaylaRezervasyonu" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@rezervasyon.Id" />
                                        <button type="submit" class="btn btn-sm btn-success" title="Onayla">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                }
                                <form asp-controller="Admin" asp-action="SilRezervasyonu" method="post" style="display: inline;"
                                      onsubmit="return confirm('Bu rezervasyonu silmek istediğinizden emin misiniz?')">
                                    <input type="hidden" name="id" value="@rezervasyon.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
