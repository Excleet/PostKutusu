@{
    Layout = "_Layout";
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Ana Slider -->
<section id="home" class="main-slider">
    <div class="slider-container">
        <!-- Slide 1 -->
        <div class="slide active" style="background-image: url('~/images/rooms/480769258.jpg');">
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <div class="slide-text">
                    <h2 class="slide-title">Valeria Antique Hotel'e Hoş Geldiniz</h2>
                    <h3 class="slide-subtitle">Sultanahmet'in Kalbinde, 1892'den Bu Yana</h3>
                    <p class="slide-description">133 yıllık tarihi binada, Osmanlı döneminden günümüze uzanan eşsiz
                        bir konaklama deneyimi</p>
                    <a href="@Url.Action("Rezervasyon")" class="btn-slide">REZERVASYON YAP</a>
                </div>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="slide" style="background-image: url('~/images/gallery/480769192.jpg');">
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <div class="slide-text">
                    <h2 class="slide-title">Tarihi Lüks ve Modern Konfor</h2>
                    <h3 class="slide-subtitle">Antika Mobilyalar ile Döşenmiş Odalar</h3>
                    <p class="slide-description">Osmanlı dönemi sanatının modern konforla buluştuğu eşsiz konaklama
                        deneyimi</p>
                    <a href="@Url.Action("Rooms")" class="btn-slide">ODALARIMIZI İNCELEYİN</a>
                </div>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="slide" style="background-image: url('~/images/rooms/480769273.jpg');">
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <div class="slide-text">
                    <h2 class="slide-title">Sultanahmet'te Benzersiz Konum</h2>
                    <h3 class="slide-subtitle">Ayasofya'ya 8 Dakika Yürüme Mesafesi</h3>
                    <p class="slide-description">Grand Bazaar, Sultanahmet Camii ve tüm tarihi eserlere yakın
                        konumumuzla İstanbul'u keşfedin</p>
                    <a href="@Url.Action("About")" class="btn-slide">KONUMUMUZU GÖRÜN</a>
                </div>
            </div>
        </div>

        <!-- Slide 4 -->
        <div class="slide" style="background-image: url('~/images/gallery/480769147.jpg');">
            <div class="slide-overlay"></div>
            <div class="slide-content">
                <div class="slide-text">
                    <h2 class="slide-title">Geleneksel Türk Misafirperverliği</h2>
                    <h3 class="slide-subtitle">24 Saat Kesintisiz Hizmet</h3>
                    <p class="slide-description">İsteğe bağlı deniz manzarası eşliğinde kahvaltı 24/7 resepsiyon ve
                        transfer hizmetlerimizle tam konfor</p>
                    <a href="@Url.Action("Services")" class="btn-slide">HİZMETLERİMİZ</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Slider Navigation -->
    <div class="slider-nav">
        <button class="slider-btn prev-slide" aria-label="Önceki Slide">‹</button>
        <button class="slider-btn next-slide" aria-label="Sonraki Slide">›</button>
    </div>

    <!-- Slider Indicators -->
    <div class="slider-indicators">
        <button class="indicator active" data-slide="0"></button>
        <button class="indicator" data-slide="1"></button>
        <button class="indicator" data-slide="2"></button>
        <button class="indicator" data-slide="3"></button>
    </div>

    <!-- Slider Progress Bar -->
    <div class="slider-progress">
        <div class="progress-bar"></div>
    </div>
</section>

<!-- Hızlı Rezervasyon -->
<section id="quick-reservation" class="quick-reservation">
    <div class="container">
        <div class="reservation-box">
            <h3>Hızlı Rezervasyon</h3>
            <form class="quick-form" action="@Url.Action("Rezervasyon")" method="get">
                <div class="form-row-quick">
                    <div class="form-group-quick">
                        <label>Giriş Tarihi</label>
                        <input type="date" id="quick-checkin" name="girisTarihi" value="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="form-group-quick">
                        <label>Çıkış Tarihi</label>
                        <input type="date" id="quick-checkout" name="cikisTarihi" value="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="form-group-quick">
                        <label>Misafir Sayısı</label>
                        <select name="misafirSayisi" required>
                            <option value="1">1 Kişi</option>
                            <option value="2" selected>2 Kişi</option>
                            <option value="3">3 Kişi</option>
                            <option value="4">4 Kişi</option>
                        </select>
                    </div>
                    <div class="form-group-quick">
                        <button type="submit" class="btn-search">REZERVASYON</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Hakkımızda Bölümü -->
<section id="about" class="about-section">
    <div class="container">
        <div class="about-content">
            <div class="about-text">
                <h2>HAKKIMIZDA</h2>
                <p>Osmanlı döneminden günümüze kadar hayatta kalan bu tarihi bina, 133 yıldır değerli
                    müşterilerimizi ağırlamaktadır. <strong>Sultanahmet'te otel</strong> arayan misafirlerimiz için
                    eşsiz bir seçenek olan binamızın içindeki orijinal el çizimi motifleri ve Çırağan
                    Sarayı'nın motiflerini çizen kişi aynı kişidir.</p>

                <p>Osmanlı döneminde Padişah'ın kişisel doktorlarından biri olan bu kişiye ait olan bu bina,
                    özellikleriyle değerli müşterilerimizi ağırlamaya can atmaktadır. <strong>Sultanahmet'in
                        kalbinde</strong>,
                    tarihi yarımadanın tam merkezinde yer alan <strong>boutique otelimiz</strong>, İstanbul'un en
                    önemli tarihi eserlerine
                    yürüme mesafesindedir.</p>

                <p><strong>Sultanahmet otel</strong> olarak 9 odamızla boutique bir hizmet anlayışı sunan otelimiz,
                    <strong>Kapalıçarşı'ya 5 dakika, Ayasofya ve
                        Sultanahmet Camii'ne 8 dakika</strong> yürüme mesafesindedir. <strong>Tramvay durağımız ise
                        sadece 3 dakika</strong>
                    uzaklıkta olup, İstanbul'u tam anlamıyla deneyimlemek için hiç yürüme zahmetine katlanmanıza
                    gerek yoktur.
                </p>

                <a href="@Url.Action("Rooms")" class="btn-about">Odalarımızı İnceleyin</a>
            </div>
            <div class="about-image">
                <img src="~/images/rooms/480769212.jpg"
                    alt="Valeria Antique Hotel lobi - antika mobilyalarla döşenmiş tarihi iç mekan">
            </div>
        </div>
    </div>
</section>

